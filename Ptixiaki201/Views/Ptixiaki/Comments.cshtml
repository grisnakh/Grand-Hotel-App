@model Ptixiaki201.Order
@{
    ViewBag.Title = "Comments";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
        #textbox
    {
        position: relative;
        display: block;
        width: 100%;
        height: 80%;
        margin-top: 40px;
    }
            #textarea
    {
        width: 96%;
        height: 200px;
        resize: none;
        overflow: hidden;
        display: block;
        box-shadow: 0px 0px 8px 0px;
        color: black;
        padding: 25px 40px;
        margin: 12px 7px;
        font-size: 20px;    }


</style>
<h2 style="text-align: center;display:block">Comments</h2>
<h4>@Html.DisplayFor(model=>model.Title)</h4>

@using (Html.BeginForm("Comments", "Ptixiaki"))
{ 
    @Html.AntiForgeryToken()

    <input type="number" style="display:none"  value="@Html.DisplayFor(pro=>pro.Id)" name="id"/>
    <div id="textbox">
        <textarea id="textarea" name="Comments" cols="8" rows="35" placeholder="I would like..."></textarea>
    </div>
    
    <span id="info">
        <img id="iconinfo" src="~/Content/images/Ptixiaki/Gifs/info.gif" width="20" height="20" />
        <i>Feel free to specify your order!</i>
    </span>
    
    <input type="submit" class="ui-btn" data-theme="b" value="Comment"> 
}