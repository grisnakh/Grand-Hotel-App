@model Ptixiaki201.Models.OrderModel
@{
    ViewBag.Title = "Make a Request";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    #textbox
    {
        position: relative;
        display: block;
        width: 100%;
        height: 80%;
        margin-top: 40px;
    }

    #textarea
    {
        width: 96%;
        height: 200px;
        resize: none;
        overflow: hidden;
        display: block;
        box-shadow: 0px 0px 8px 0px;
        color: black;
        padding: 25px 40px;
        margin: 12px 7px;
        font-size: 20px;
    }

    #info
    {
        position: relative;
        text-align: left;
        width: 100%;
        display: block;
        margin-top: 1px;
    }

    #iconinfo
    {
        position: relative;
        float: left;
    }
</style>

@section header{
    <h1>My Concierge</h1>
}

<div style="display: block; position: relative; width: 100%; text-align: end;">
    Email:<b>@Html.DisplayFor(Model => Model.Email)</b>
    <p>
        Room:<b>@Html.DisplayFor(Model => Model.Room)</b>
    </p>
</div>

@using (Html.BeginForm("Index", "MakeRequest"))
{ 
    @Html.AntiForgeryToken()
    <div id="textbox">
        <textarea id="textarea" name="Requestarea" cols="8" rows="35" placeholder="I would like..." required="required"></textarea>
    </div>
    <span id="info">
        <img id="iconinfo" src="~/Content/images/Ptixiaki/Gifs/info.gif" width="20" height="20" />
        <i>From this form,you can get in touch directly with our Concierge!</i>
    </span>
    <input type="submit" class="ui-btn" data-theme="b" value="Make Request!">     
            
}

