@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CallTaxiNow</title>
</head>
<body>
    @using (Html.BeginForm("CallTaxiNow", "CallTaxi"))
    { 
        @Html.ValidationSummary(true)
        <div data-mini="true">
            <span>Number of cars:</span>
            <input type="number" value="1" name="numberofcars" />
            <p>
                <span>Time:
                <input disabled="disabled" type="time" name="time" value="@DateTime.Now.ToShortTimeString()" />
                </span>
            </p>

            <button data-mini="false" type="submit" value="Call Now!"></button>
             
        </div>
    }
</body>
</html>
